<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/soal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='1. 3 + 5 =  '
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a. 7 " />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b. 6 " />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton"
                    tools:text="c. 8 " />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radiroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/teiew11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='2. Delapan ditambah enam sama dengan . . .  '
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radutt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a. Empat belas  " />

                <RadioButton
                    android:id="@+id/radion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b. Dua belas  " />

                <RadioButton
                    android:id="@+id/raBun4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c. Tiga belas  " />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='3. Di dalam kandang ada 17 ekor ayam.Paman menjual 8 ekor ayam.  Jumlah ayam paman sekarang adalah . . . ekor. '
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/radioButt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a. 10 " />

                <RadioButton
                    android:id="@+id/radioBon3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b. 9 " />

                <RadioButton
                    android:id="@+id/radioBun4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c. 8 " />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>